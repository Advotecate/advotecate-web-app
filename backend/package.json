{
  "name": "advotecate-backend",
  "version": "1.0.0",
  "description": "Advotecate backend API services",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:debug": "tsx --inspect-brk watch src/server.ts",
    "build": "tsc",
    "build:docker": "docker build -t advotecate-backend .",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",

    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:unit": "jest --testPathPattern=tests/services --testPathPattern=tests/repositories",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:fluidpay": "jest --testPathPattern=fluidpay",
    "test:debug": "jest --runInBand --detectOpenHandles",

    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",

    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:reset": "tsx src/scripts/reset.ts",
    "db:backup": "tsx src/scripts/backup.ts",

    "health": "curl -f http://localhost:3000/health || exit 1",
    "deploy:vercel": "vercel --prod",
    "deploy:docker": "npm run build:docker && docker run -p 3000:3000 advotecate-backend",

    "security:audit": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "clean": "rimraf dist coverage .nyc_output",
    "precommit": "npm run lint:check && npm run type-check && npm run test:ci",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "jose": "^4.15.4",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.3",
    "zod": "^3.21.4",
    "pg": "^8.11.0",
    "@supabase/supabase-js": "^2.38.0",
    "redis": "^4.6.7",
    "winston": "^3.9.0",
    "dotenv": "^16.1.4",
    "node-fetch": "^3.3.1",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/qrcode": "^1.5.1",
    "@types/pg": "^8.10.1",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.41.0",
    "prettier": "^3.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "jest-watch-typeahead": "^2.2.2",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "supertest": "^6.3.3",
    "rimraf": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^3.0.0",
    "vercel": "^32.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}