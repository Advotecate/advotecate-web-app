# Advotecate Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
LOG_LEVEL=info

# Frontend URLs (for CORS and redirects)
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration (Primary)
DATABASE_URL=postgresql://username:password@localhost:5432/advotecate_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=advotecate_dev

# Supabase Configuration (Alternative)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Database Type Selection (postgres or supabase)
DB_TYPE=postgres

# =============================================================================
# FLUIDPAY PAYMENT PROCESSING
# =============================================================================

# FluidPay API Configuration
FLUIDPAY_API_KEY=your-fluidpay-api-key
FLUIDPAY_API_SECRET=your-fluidpay-api-secret
FLUIDPAY_WEBHOOK_SECRET=your-webhook-secret

# FluidPay Environment URLs
FLUIDPAY_SANDBOX_URL=https://sandbox-api.fluidpay.com/v1
FLUIDPAY_PRODUCTION_URL=https://api.fluidpay.com/v1

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@advotecate.com
SUPPORT_EMAIL=support@advotecate.com

# Email Templates
VERIFICATION_EMAIL_TEMPLATE_ID=d-your-template-id
RECEIPT_EMAIL_TEMPLATE_ID=d-your-template-id
NOTIFICATION_EMAIL_TEMPLATE_ID=d-your-template-id

# =============================================================================
# SMS SERVICES
# =============================================================================

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# FILE STORAGE
# =============================================================================

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=advotecate-uploads
S3_REGION=us-east-1

# Cloudinary Configuration (Alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# REDIS CACHE
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================

# Encryption Key for Sensitive Data
ENCRYPTION_KEY=your-32-character-encryption-key

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry Error Monitoring
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# FEC API Configuration (for compliance verification)
FEC_API_KEY=your-fec-api-key

# KYC/AML Service (if using external service)
KYC_API_KEY=your-kyc-api-key
KYC_BASE_URL=https://api.kyc-provider.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Development Features
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_LOGGING=true
ENABLE_MOCK_PAYMENTS=false
ENABLE_EMAIL_MOCK=false

# Production Features
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_HELMET_SECURITY=true

# =============================================================================
# WEBHOOK ENDPOINTS
# =============================================================================

# External Webhook URLs (where external services send webhooks)
WEBHOOK_BASE_URL=https://your-domain.com/api/webhooks

# Webhook Secrets for Verification
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
SENDGRID_WEBHOOK_SECRET=your-sendgrid-webhook-verification-key

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/advotecate_test

# Test API Keys (use test/sandbox versions)
TEST_FLUIDPAY_API_KEY=test_your-test-api-key
TEST_SENDGRID_API_KEY=SG.test-key

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Graceful Shutdown Timeout
SHUTDOWN_TIMEOUT=10000

# Process Management
PM2_INSTANCES=max
PM2_MAX_MEMORY=512M

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Hot Reload
HOT_RELOAD=true

# Debug Mode
DEBUG=advotecate:*

# Seed Data
SEED_ADMIN_EMAIL=admin@advotecate.com
SEED_ADMIN_PASSWORD=change-this-password